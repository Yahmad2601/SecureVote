{
  "version": 3,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs20.x",
      "includeFiles": "dist/public/**"
    }
  },
  "env": {
    "SESSION_SECRET": "@securevote-session-secret"
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.ts" },
    { "source": "/(.*)", "destination": "/api/index.ts" }
  ]
}
